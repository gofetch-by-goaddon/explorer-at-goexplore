{
	"customers": {
	"klass": "customers",
		"query": {
			"company_id": "{{ company_id }}",
			"_id": "{{ _id }}"
		},
		"projection": {
			"_id": 1,
			"mail_address": 1
		}
	},
	"orders": {
		"klass": "orders",
		"query": {
			"company_id": "{{ company_id }}",
			"customer_id": "{{ customer_id }}"
		},
		"pagination": {
			"page": 0,
			"per_page": 10
		},
		"projection": {
			"_id": 1,
			"order_number": 1,
			"datetime": 1,
			"datetime_first": 1,
			"state": 1
		},
		"sort": {
			"datetime_first": -1
		}
	}
}